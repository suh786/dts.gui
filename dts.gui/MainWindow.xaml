<Window x:Class="dts.gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:View="clr-namespace:dts.gui.View"
        Title="MainWindow">
    <DockPanel>
    
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Content="Show Relatives" Click="HandleShowRelatives" Margin="5"/>
        </StackPanel>
        
        <Grid DockPanel.Dock="Bottom">
            <View:DataGrid DataContext="{Binding PersonDataGridViewModel}"/>
        </Grid>

    </DockPanel>
</Window>
